{
	"$schema": "https://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"streamer": {
		"type": "object",
		"description": "Streamers personal information",
		"properties": {
        "id": {
          "type": "string",
          "pattern": "^[A-Za-z0-9]+$",
          "description": "Cleaned alias with all spaces, punctuation, and special characters removed (must be unique across all streamers)",
          "readOnly": true
        },
			"alias": {
			"type": "string",
			"description": "Streaming alias or nickname"
			},
			"firstName": {
			"type": "string",
			"description": "First name of streamer"
			},
			"lastName": {
			"type": "string",
			"description": "Last name of streamer"
			},
			"description": {
			"type": "string",
			"description": "Description of what the streamer does and what makes their streams unique"
			},
			"email": {
			"type": "string",
			"format": "email",
			"description": "Streamer's email address"
			},
			"city": {
			"type": "string",
			"description": "Location of streamer"
			},
			"country": {
			"type": "string",
			"description": "Country the streamer is in"
			},
			"languages": {
			"type": "array",
			"minItems": 1,
			"items": {
				"type": "string",
				"enum": [
					"English",
					"Afrikaans",
					"Albanian",
					"Amharic",
					"Armenian",
					"Azerbaijani",
					"Basque",
					"Belarusian",
					"Bosnian",
					"Bulgarian",
					"Catalan",
					"Cebuano",
					"Croatian",
					"Czech",
					"Danish",
					"Dutch",
					"Estonian",
					"Filipino",
					"Finnish",
					"Galician",
					"Georgian",
					"German",
					"Greek",
					"Gujarati",
					"Haitian Creole",
					"Hebrew",
					"Hmong",
					"Hungarian",
					"Icelandic",
					"Igbo",
					"Italian",
					"Japanese",
					"Javanese",
					"Kannada",
					"Kazakh",
					"Khmer",
					"Kinyarwanda",
					"Korean",
					"Kurdish",
					"Lao",
					"Latvian",
					"Lithuanian",
					"Luxembourgish",
					"Macedonian",
					"Malay",
					"Malayalam",
					"Maltese",
					"Marathi",
					"Mongolian",
					"Nepali",
					"Norwegian",
					"Pashto",
					"Persian",
					"Polish",
					"Punjabi",
					"Romanian",
					"Serbian",
					"Sinhala",
					"Slovak",
					"Slovenian",
					"Somali",
					"Swahili",
					"Swedish",
					"Tamil",
					"Telugu",
					"Thai",
					"Turkish",
					"Ukrainian",
					"Urdu",
					"Uzbek",
					"Vietnamese",
					"Welsh",
					"Xhosa",
					"Yoruba",
					"Zulu"
				]
			},
			"description": "Languages the streamer uses on their channel (must match one of the supported options)"
			}
		},
		"required": [
			"id",
			"alias"
		]
		},
		"platforms": {
		"type": "object",
		"properties": {
			"youtube": {
			"type": "object",
			"properties": {
				"handle": {
				"type": "string",
				"description": "YouTube channel handle"
				},
				"channelId": {
				"type": "string",
				"description": "Canonical UC channel ID"
				},
				"hubSecret": {
				"type": "string",
				"description": "Webhook secret used to verify YouTube notifications"
				},
				"hubLeaseRenewalDue": {
				"type": "string",
				"format": "date-time",
				"description": "Date and time that the YouTube alert subscription is due for renewal"
				}
			},
			"required": [
				"handle"
			]
			},
			"facebook": {
			"type": "object",
			"properties": {
				"pageId": {
				"type": "string",
				"description": "Facebook page identifier"
				},
				"accessToken": {
				"type": "string",
				"description": "Token used to call the Facebook Graph API"
				}
			}
			},
			"twitch": {
			"type": "object",
			"properties": {
				"username": {
				"type": "string",
				"description": "Twitch broadcaster username"
				},
				"broadcasterId": {
				"type": "string",
				"description": "Twitch broadcaster ID"
				}
			}
			}
		}
		},
		"createdAt": {
		"type": "string",
		"format": "date-time",
		"description": "ISO-8601 timestamp when this record was created",
		"readOnly": true
		},
		"updatedAt": {
		"type": "string",
		"format": "date-time",
		"description": "ISO-8601 timestamp when this record was last updated",
		"readOnly": true
		}
	}
}
